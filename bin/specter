#!/usr/bin/env php
<?php
/**
 * Specter command line tool
 *
 * @author    Platform Team <developer@helpscout.net>
 * @copyright 2016 Help Scout
 */

if (version_compare('7.0.0', PHP_VERSION, '>')) {
    fwrite(
        STDERR,
        sprintf(
            'This version of Specter is supported on PHP 7.0 and PHP 7.1.' . PHP_EOL .
            'You are using PHP %s (%s).' . PHP_EOL,
            PHP_VERSION,
            PHP_BINARY
        )
    );
    exit(1);
}

if (!ini_get('date.timezone')) {
    ini_set('date.timezone', 'UTC');
}

require __DIR__.'/../vendor/autoload.php';


echo 'Placeholder for a fixture generation system';

/* End of file specter */
